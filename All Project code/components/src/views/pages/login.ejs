<%- include ('../partials/head') %>
<%- include ('../partials/menuBlank') %>

<main>
  

  <div class="col"><%- include ('../partials/message') %></div>
  <div class="container" id="loginContainer">

    <h2 class="display-4" id="welcomeTitle">Welcome to BudgetBeam!</h2>

    <form action="/login" method="POST" id="loginForm">
        <h2 id="loginTitle">Login to Your Account</h2>
        <div class="form-group">
          <input id="usernameInput" type="text" class="form-control" name="username" placeholder="Username"/>
        </div>
        <div class="form-group">
            <input id="passwordInput" type="password" class="form-control" name="password" placeholder="Password"/>
          </div>
        <p id="registerHyperlink">Don't have an account? <a href="/register">Register</a></p>
        <button type="submit" class="btn btn-primary">Login</button>
        </form>
  </div>
</main>

