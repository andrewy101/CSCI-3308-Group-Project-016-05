<%- include ('../partials/head') %>
<%- include ('../partials/menuBlank') %>

<main>
  
  <div class="col"><%- include ('../partials/message') %></div>
  <div class="container" id="registerContainer">
    <h2 class="display-4" id="registerWelcomeTitle">Welcome to BudgetBeam!</h2>

    <div class="card shadow p-3 mb-5 bg-white rounded" style="width:650px; margin: 0 auto; margin-top:20px;">
      <div class="card-body">
        <form action="/register" method="POST" id="registerForm">

          <h2 id="registerTitle">Register for an Account</h2>
          <div class="form-group">
            <input id="regUnameInput" type="text" class="form-control" name="username" placeholder="Username" />
          </div>
          <div class="form-group">
              <input id="regPasswordInput" type="password" class="form-control" name="password" placeholder="Password"/>
            
            </div>
          <p id="loginHyperlink">Already have an account? <a href="/login">Login</a></p>
          <button type="submit" class="btn btn-primary">Register</button>
        </form>

      </div>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>