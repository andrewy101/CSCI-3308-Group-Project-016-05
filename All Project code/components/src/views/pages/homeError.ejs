  <div class="row justify-content-center">
    <div class="col-md-12 col-sm-12" id="errorColumn">
        <div class="card shadow-lg border-0 rounded-lg mt-5 mx-auto" id="errorCard">
            <h3 class="card-header display-1 text-muted text-center">
                <%= message %>
            </h3>

            <span class="card-subtitle mb-2 text-muted text-center" id="errorTitle">
